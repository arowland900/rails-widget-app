<div class="container">
    <h1 class="jumbotron text-center">Wacky Widgets</h1>
    <% if @widgets.length > 0 %>
        <table>
            <tr>
                <th>Description</th>
                <th>Quantity</th> 
                <th>Remove</th>
            </tr>
            <% @widgets.each do |w|%>
            <tr>
                <td><%= w.description %></td>
                <td><%= w.quantity %></td>
                <td><%= link_to 'X',  widget_path(w),  method: :delete, class: "btn btn-xs btn-danger" %></td>
            </tr>
           
            <% end %>
        </table>
    <% else %>
        <h3 class='text-center'>No Widgets Exist</h3>
    <% end %>

    <hr>
    <h4>Add a New Widget:</h4>
    <div class="form-group">
        <%= form_for @newwidget do |f| %>
            <div>
                <%= f.label :description %>
                <%= f.text_field :description, class: "form-control" %>
            </div>
            <div>
                <%= f.label :quantity %>
                <%= f.text_field :quantity, class: "form-control"  %>
            </div>
            <%= f.submit "Add Widget!", class: "btn btn-success" %>
        <% end %>
    </div>


</div>